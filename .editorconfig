# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = false

[*.go]
indent_style = tab
indent_size = 4

[*.proto]
indent_style = space
indent_size = 2

[makefile]
indent_style = tab

[*.yaml]
indent_style = space
indent_size = 2
